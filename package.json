{
  "name": "viztrtr",
  "version": "0.1.0",
  "description": "Visual Iteration Orchestrator - Autonomous UI/UX improvement system",
  "main": "dist/core/index.js",
  "types": "dist/core/index.d.ts",
  "bin": {
    "viztrtr": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && ./scripts/verify-dist.sh",
    "dev": "tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:viztrtr-ui": "npm run build && node dist/projects/viztrtr-ui/test.js",
    "test:performia": "npm run build && node dist/performia-test.js",
    "demo": "npm run build && node dist/examples/demo.js",
    "postinstall": "./scripts/verify-dist.sh || echo '⚠️  Run npm run build to compile V2 agents'",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,json}'",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint && npm run format:check && npm run typecheck",
    "docs:generate": "typedoc --out docs/api src/core/index.ts",
    "docs:lint": "markdownlint '**/*.md' --ignore node_modules --ignore dist --ignore ui/frontend/node_modules --ignore ui/server/node_modules",
    "docs:lint:fix": "markdownlint '**/*.md' --ignore node_modules --ignore dist --ignore ui/frontend/node_modules --ignore ui/server/node_modules --fix",
    "docs:update": "run-s docs:generate docs:lint:fix",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "clean:logs": "rimraf '*.log'",
    "clean:temp": "rimraf '*.tmp' 'test-*.md' 'RESUME_HERE.md'",
    "clean:nodemodules": "rimraf node_modules ui/frontend/node_modules ui/server/node_modules",
    "clean:all": "run-p clean:dist clean:coverage clean:logs clean:temp",
    "clean:deep": "run-s clean:all clean:nodemodules",
    "git:status": "git status --short",
    "git:branches": "git branch -vv",
    "git:prune": "git remote prune origin",
    "git:optimize": "git gc --aggressive --prune=now",
    "git:check": "run-s git:status git:branches",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level=moderate",
    "deps:check": "ncu",
    "deps:update": "ncu -u && npm install",
    "quality:check": "run-s typecheck lint format:check test",
    "quality:fix": "run-s lint:fix format test",
    "cleanup:analyze": "node scripts/cleanup-repo.js",
    "cleanup:execute": "node scripts/cleanup-repo.js --execute",
    "maintain": "run-s clean:all docs:update quality:check git:check security:check",
    "maintain:quick": "run-s clean:all quality:fix git:status",
    "maintain:deep": "run-s clean:deep maintain deps:check",
    "prepare": "lefthook install"
  },
  "keywords": [
    "ui",
    "ux",
    "design",
    "automation",
    "ai",
    "claude",
    "vision",
    "iteration"
  ],
  "author": "Daniel Connolly",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "chalk": "^4.1.2",
    "chrome-devtools-mcp": "^0.6.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^6.1.0",
    "ora": "^5.4.1",
    "playwright": "^1.56.0",
    "puppeteer": "^23.0.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.8",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.36.0",
    "jest": "^29.7.0",
    "lefthook": "^1.13.6",
    "lint-staged": "^16.2.3",
    "markdownlint-cli": "^0.45.0",
    "npm-check-updates": "^19.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
