{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/core/**/*",
    "src/plugins/**/*",
    "src/agents/**/*",
    "src/memory/**/*",
    "src/services/**/*",
    "src/tools/**/*",
    "src/utils/**/*",
    "src/__tests__/**/*",
    "examples/**/*",
    "projects/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.skip.ts",
    "ui/**/*",
    "src/components/**/*",
    "src/pages/**/*"
  ]
}
